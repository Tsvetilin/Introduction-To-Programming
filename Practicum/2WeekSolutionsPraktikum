char firstUpper, secondUpper, firstLower, secondLower, fifthChar;
std::set<char> setA, setB;

std::cout << "Въведете две главни букви за множество A: ";
std::cin >> firstUpper >> secondUpper;
std::cout << "Въведете две малки букви за множество B: ";
std::cin >> firstLower >> secondLower;
std::cout << "Въведете петата буква (case insensitive): ";
std::cin >> fifthChar;


if (firstUpper > secondUpper) std::swap(firstUpper, secondUpper);
for (char ch = firstUpper; ch <= secondUpper; ++ch) {
    setA.insert(ch);
}

if (firstLower > secondLower) std::swap(firstLower, secondLower);
for (char ch = firstLower; ch <= secondLower; ++ch) {
    setB.insert(ch);
}

char lowerFifth = std::tolower(fifthChar);
char upperFifth = std::toupper(fifthChar);


bool inUnion = setA.count(upperFifth) || setB.count(lowerFifth);
bool inIntersection = setA.count(upperFifth) && setB.count(lowerFifth);
bool inDifference = setA.count(upperFifth) && !setB.count(lowerFifth);


std::cout << "Петата буква принадлежи на обединението на A и B: "
<< (inUnion ? "Да" : "Не") << std::endl;

std::cout << "Петата буква принадлежи на сечението на A и B: "
<< (inIntersection ? "Да" : "Не") << std::endl;

std::cout << "Петата буква принадлежи на разликата на A с B: "
<< (inDifference ? "Да" : "Не") << std::endl;

std::cout << "Петата буква принадлежи само и единствено в едно от множествата: "
<< (inUnion && !inIntersection ? "Да" : "Не") << std::endl;

return 0;

}

